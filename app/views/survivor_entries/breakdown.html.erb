
<%= navigationBar(NavigationHelper::GAME_BUTTON_MAP[@game_type]) %>

<div class='row-fluid'>
  <div class='span3 center nexttoh1'>
    <a href=<%= "'/" + @game_type.to_s + "/rules'" %> class='btn btn-inverse'>
      <%= SurvivorEntry.game_type_title(@game_type) %> Rules
    </a>
  </div>
  <div class='span6 center'>
    <h3>NFL <%= SurvivorEntry.game_type_title(@game_type) %></h3>
  </div>
  <div class='span3 center nexttoh1'>
    <a href=<%= "'/" + @game_type.to_s + "/week'" %> class='btn btn-inverse'>Weekly Breakdown</a>
  </div>
</div>

<% if @current_week > 0 %>
  <div class='row-fluid'>
    <div class='span12 center'>
      <%= entry_stats_table(@game_type, @week_to_entry_stats_map, @current_week) %>
    </div>
  </div>
<% end %>

<div class='row-fluid'>
  <div class='span12 center'>
    <h4>Entry Breakdown</h4>
    <p>
      Download:
      <%= link_to "CSV", "/" + @game_type.to_s + ".csv" %> | Excel
      <!-- %= link_to "Excel", "/" + @game_type.to_s + ".xls" % -->
    </p>
    <%= all_bets_table(@game_type, @entries_by_type, @entry_to_bets_map, @user, @current_week, 
                       @game_week) %>
  </div>
</div>
