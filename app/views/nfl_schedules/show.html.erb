<%= navigationBar(NavigationHelper::ADMIN_NFL_SCHEDULE_BUTTON) %>

<div class='row-fluid'>
  <div class='span12 center'>
    <h3>Manage NFL Schedule</h3>
  </div>
</div>

<div class='row-fluid'>
  <div class='span12 center'>
    <h4><%= @nfl_game.away_nfl_team.full_name %> @ <%= @nfl_game.home_nfl_team.full_name %></h4>
    <%= show_notice_as_alert(notice) %>
    
    <form action=<%= "'/nfl_schedule/" + @nfl_game.id.to_s + "'" %> method='post'>
      <div class='row-fluid'>
        <div class='span6 center'>
          <h5>Game Details</h5>
          <table class='table table-striped table-bordered center'>
            <tr><td><strong>Year:</strong></td><td><%= @nfl_game.year %></td></tr>
            <tr><td><strong>Week:</strong></td><td><%= @nfl_game.week %></td></tr>
            <tr><td><strong>Date:</strong></td>
                <td><%= @nfl_game.start_time.time.localtime.strftime("%m/%d/%Y") %></td></tr>
            <tr><td><strong>Time:</strong></td>
                <td><%= @nfl_game.start_time.time.localtime.strftime("%I:%M %p %Z") %></td></tr>
          </table>
        </div>
        <div class='span6 center'>
          <h5>Results</h5>
          <table class='table table-striped table-bordered center'>
            <thead><tr><th>Team</th><th>Score</th></tr></thead>
            <tr>
              <td><strong><%= @nfl_game.away_nfl_team.full_name %></strong></td>
              <td><input type='number' name='away_score' min='0'
                   value=<%= @nfl_game.away_score.nil? ? "''" : "'" + @nfl_game.away_score.to_s + "'" %>
                   required></td>
            </tr>
            <tr>
              <td><strong><%= @nfl_game.home_nfl_team.full_name %></strong></td>
              <td><input type='number' name='home_score' min='0'
                   value=<%= @nfl_game.home_score.nil? ? "''" : "'" + @nfl_game.home_score.to_s + "'" %>
                   required></td>
            </tr>
          </table>
        </div>
      </div>

      <p class='center'>
        <button class='btn btn-primary' name='save'>Update Score</button>
        <button class='btn' name='cancel'>Cancel</button>
        <a href='/nfl_schedule' class='btn btn-inverse'>Back to Schedule</a>
      </p>
    </form>
  </div>
</div>