<table class='table table-striped table-bordered table-condensed center'>
  <thead class='rightborderme'><tr>
    <th>Date</th>
    <th>Time</th>
    <th>Home Team</th>
    <th>Home Score</th>
    <th>Away Team</th>
    <th>Away Score</th>
    <th></th>
  </tr></thead>

<% @games.each do |nfl_game| %>
  <tr>
    <td><%= nfl_game.start_time.utc.in_time_zone.strftime("%m/%d/%Y") %></td>
    <td><%= nfl_game.start_time.utc.in_time_zone.strftime("%I:%M %p %Z") %></td>
    <td><%= nfl_game.home_nfl_team.abbreviation %></td>
    <td><%= nfl_game.home_score %></td>
    <td><%= nfl_game.away_nfl_team.abbreviation %></td>
    <td><%= nfl_game.away_score %></td>
    <td><%= link_to 'Update Score', '/nfl_schedule/' + nfl_game.id.to_s %></td>
  </tr>
<% end %>
</table>
