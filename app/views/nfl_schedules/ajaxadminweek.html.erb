
<form action=<%= "'/nfl_schedule/week/" + @week.number.to_s + "'" %> method='post'>
  <p class='center'>
    <button class='btn btn-primary' name='updatescores'>Update Scores</button>&nbsp
    <button class='btn' name='cancel'>Cancel</button>
  </p>

  <table class='table table-striped table-bordered table-condensed center'>
    <thead class='rightborderme'><tr>
      <th>Date</th>
      <th>Time</th>
      <th>Away Team</th>
      <th>Away Score</th>
      <th>Home Team</th>
      <th>Home Score</th>
    </tr></thead>

  <% @games.each do |nfl_game| %>
    <tr class='tdselect'>
      <td><%= nfl_game.start_time.utc.in_time_zone.strftime("%m/%d/%Y") %></td>
      <td><%= nfl_game.start_time.utc.in_time_zone.strftime("%I:%M %p %Z") %></td>
      <td><%= nfl_game.away_nfl_team.abbreviation %></td>
      <td><input type='number' class='input-mini' name=<%= "'" + nfl_game.id.to_s + "_away'" %>
                 value=<%= "'" + nfl_game.away_score.to_s + "'" %> /></td>
      <td><%= nfl_game.home_nfl_team.abbreviation %></td>
      <td><input type='number' class='input-mini' name=<%= "'" + nfl_game.id.to_s + "_home'" %>
                 value=<%= "'" + nfl_game.home_score.to_s + "'" %> /></td>
    </tr>
  <% end %>
  </table>

  <p class='center'>
    <button class='btn btn-primary' name='updatescores'>Update Scores</button>&nbsp
    <button class='btn' name='cancel'>Cancel</button>
  </p>
</form>